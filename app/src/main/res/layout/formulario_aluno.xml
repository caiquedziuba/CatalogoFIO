<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lucas.alunos_material.activity.FormularioAlunoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarForAluno"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <EditText
        android:layout_marginTop="120dp"
        android:id="@+id/nomeCurso"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:hint="Nome"
        android:paddingTop="60dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/duracaoCurso"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomeCurso"
        android:layout_below="@+id/nomeCurso"
        android:hint="Telefone"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/descricaoCurso"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomeCurso"
        android:layout_below="@+id/duracaoCurso"
        android:hint="Site"
        android:inputType="textPersonName"/>


    <RatingBar
        android:id="@+id/nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descricaoCurso"
        android:layout_below="@+id/descricaoCurso"
        android:layout_marginTop="10dp"
        android:max="10"
        android:numStars="5" />


</RelativeLayout>
